---
import { Image } from 'astro:assets';
import config from '@config/config.json';
import social from '@config/social';

const socialItems = social.networks;
---

<section class="bg-zinc-300 dark:bg-zinc-900">
  <div class="mx-auto max-w-screen-lg px-4 py-0 pb-6 sm:px-6 sm:pb-12 lg:px-8">
    <div class="flex flex-col md:flex-row-reverse items-start justify-between">
      <div class="w-full md:w-auto rounded-lg">
        <figure class="my-1">
          <Image
            class="w-24 rounded-lg md:w-32"
            width={512}
            height={512}
            src={config.author.avatar}
            alt={config.author.name}
            decoding="async"
            loading="lazy"
          />
        </figure>
      </div>
      <div class="w-full md:w-3/5">
        <h1 class="mb-0 text-lg font-bold text-zinc-900 sm:text-3xl md:text-2xl dark:text-white">
          {config.author.name}
        </h1>
        <p class="mt-1.5 text-sm  md:text-lg text-zinc-900 dark:text-zinc-400">
          I am a Senior Full-Stack Developer with more than 10 years of experience in development and technology
          management. Recognized by Google as an <a
            class="underline underline-offset-2"
            target="_blank"
            href="https://g.dev/nicobytes">Angular & Web Developer Expert</a
          >, and by Microsoft as a <a
            class="underline underline-offset-2"
            target="_blank"
            href="https://mvp.microsoft.com/en-US/MVP/profile/28c464f4-ccb0-ec11-983f-000d3a1017e3"
            >Most Valuable Professional.</a
          >
        </p>
        <div class="m-auto flex space-x-5 pt-8">
          {
            socialItems?.map((item) => (
              <a href={item.url} class="text-zinc-900 text-2xl dark:text-zinc-200" target="_blank" rel="noopener noreferrer">
                <ion-icon name={item.icon}></ion-icon>
              </a>
            ))
          }
        </div>
      </div>
      
    </div>
  </div>
</section>
